{
  "name": "A!",
  "description": "This extension is to integrate openai api with chrome",
  "version": "1.1",
  "manifest_version": 3,
  "action": {
    "default_title": "Click to open panel"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "activeTab",
    "storage",
    "notifications",
    "contextMenus",
    "clipboardWrite",
    "clipboardRead",
    "sidePanel"
  ],
  "options_page": "../options.html",
  "background": {
    "service_worker": "../background.js"
  },
  "host_permissions": ["<all_urls>"],
  "content_scripts": [{
    "matches": [
       "<all_urls>"
    ],
    "js": ["../content.js"],
    "run_at": "document_end"    
    }
  ],
  "commands": {
    "run-foo": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Run \"foo\" on the current page."
    }
  },
  "side_panel": {
    "default_path": "../sidepanel/sidepanel.html"
  }
}