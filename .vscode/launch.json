    "version": "0.2.0",
    "configurations": [
        {
            "request": "launch",
            "name": "Debug Deno Program",
            "type": "node",
            "program": "${fileBasename}",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "env": {
                "TOKEN": "weotek"
            },
            "runtimeArgs": [
                "run",
                "--allow-env", "--allow-net",
                "--inspect",
                "deno/main.ts",
            ],
            "attachSimplePort": 9229
        }
    ]
}
