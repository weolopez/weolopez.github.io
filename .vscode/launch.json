    "version": "0.2.0",
    "configurations": [
        {
            "request": "launch",
            "name": "Debug Deno Program",
            "type": "node",
            "program": "${fileBasename}",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "env": {
                "BEARER_TOKEN": "sk-AeOEk4HoZI5wJhLVhISREw",
                "TOKEN": "weotek"
            },
            "runtimeArgs": [
                "run",
                "--allow-read", "--allow-write",
                "--allow-env",  "--allow-net",
                "--inspect", 
                "server/src/main.ts",
            ],
            "attachSimplePort": 9229
        },
        {
            "name": "Launch Chat Component in Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8081/index.html",
            "webRoot": "${workspaceFolder}",
            "port": 9222
        },
        {
            "name": "Debug Hocuspocus Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/server.ts",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "run",
                "--allow-net",
                "--allow-read",
                "--allow-write",
                "--allow-env"
            ],
            "attachSimplePort": 9229
        },
        {
            "name": "Debug Static Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/static-server.ts",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "run",
                "--allow-net",
                "--allow-read"
            ],
            "attachSimplePort": 9229
        }
    ],
  "compounds": [
    {
      "name": "Deno Server + Chrome Client",
      "configurations": ["Debug Deno Program", "Launch Chat Component in Chrome"]
    }
  ]
}
